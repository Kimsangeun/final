<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="reser">

	<select id="list" resultType="reserVo">
		select * from reser
	</select>
	<insert id="insert" parameterType="reserVo">
		insert into reser (id, rid, cash, card, sid, mid, cnt, seatnum) 
		values(#{id}, #{rId}, #{cash}, #{card}, #{sId}, #{mId}, #{cnt}, #{seatNum})
	</insert>

	<select id="detail" parameterType="reserVo" resultType="reserVo">
		select * from reser where rid=#{rid}
	</select>
</mapper>